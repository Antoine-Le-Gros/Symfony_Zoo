{% extends 'base.html.twig' %}
{% block route %} {{ path('app_families_showall') }} {% endblock %}
{% block title %}Liste des familles {% if category %}appartenant à la catégorie {{ categoryName }} {% endif %} {% endblock %}
{% block body %}
    <h1>Liste des familles {% if category %}appartenant à la catégorie {{ categoryName }} {% endif %}</h1>
    <ul class="famillesAnimal">
        {% for famille in families %}
            <li><a class="nav-link" href="{{ path('app_especes', {'idFamily': famille.id}) }}">{{ famille.nomFamille }} <span class="badge bg-secondary">{{ famille.descriptionFamille }} </span><img src="{{ famille.image.image }}" alt="Image inconnue" width="256" height="256"></a> </li>
        {% endfor %}
    </ul>

{% endblock %}
