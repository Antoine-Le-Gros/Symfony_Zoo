{% extends 'base.html.twig' %}

{% block title %}Liste des catégories présentes au sein du zoo{% endblock %}
{% block route %} {{ path('app_categories') }} {% endblock %}
{% block stylesheets %} <link href="{{ asset('css/categorie.css') }}" rel="stylesheet"> {% endblock %}
{% block body  %}
    <h1 class="subsectionTitle text-center">Liste des catégories présentes au sein du zoo</h1>
    <hr>
    <ul class="categoriesAnimal">
        {% for categorie in categories %}
            {% set image = categorie.image.image|default('') %}
            <li class="category-familly">
                {% if image != '' %}
                    <img class="category-img" src="{{ image }}" alt="Image inconnue" >
                {% endif%}
                <a class="nav-link category"  href="{{ path('app_families', {idCategory: categorie.id}) }}"><span class="badge bg-secondary category">{{ categorie.nomCategorie }} </span>{{ categorie.descriptionCategorie }}</a>
            </li>

        {% endfor %}
    </ul>

{% endblock %}
