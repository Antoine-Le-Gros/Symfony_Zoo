{% extends 'base.html.twig' %}

{% block title %}Liste des catégories présentes au sein du zoo{% endblock %}
{% block route %} {{ path('app_categories') }} {% endblock %}
{% block body %}
    <h1>Liste des catégories présentes au sein du zoo</h1>
    <ul class="categoriesAnimal">
        {% for categorie in categories %}
            <li><a class="nav-link"  href="{{ path('app_families', {idCategory: categorie.id}) }}">{{ categorie.nomCategorie }} <span class="badge bg-secondary">{{ categorie.descriptionCategorie }}</span></a></li>

        {% endfor %}
    </ul>

{% endblock %}
