{% extends 'base.html.twig' %}

{% block title %} {{ event.name }} {% endblock %}

{% block body %}

    <h1 class="subsectionTitle">{{ event.name }}</h1>
    <dl>
        <dt> Description évènement </dt>
        <dd> {{ event.description }}</dd>
        <dt> Date</dt>
        <dd> {{ event.date.format('Y-m-d H:i') }}</dd>
        <dt> Nombre de visiteurs</dt>
        <dd> {{ event.quota }}</dd>
    </dl>
    <a class="btn btn-outline-success" href="{{ path('app_event_inscriptioncreate', {id: event.id}) }}"> S'inscrire à l'évènement {{ event.name }}</a>
{% endblock %}
