{% extends 'base.html.twig' %}

{% block title %} {{ event.name }} {% endblock %}

{% block body %}

    <h1 class="subsectionTitle">{{ event.name |capitalize}}</h1>
    <dl>
        <dt> Description évènement </dt>
        <dd> {{ event.description | capitalize }}</dd>
        <dt> Date</dt>
        <dd> {{ event.date.format('Y-m-d H:i') }}</dd>
        <dt> Nombre de visiteurs</dt>
        <dd> {{ event.quota }}</dd>
    </dl>
    {% dump(events) %}

    {% set cle=-1 %}
    {% set cleprev=-1 %}
    {% for key,value in events %}
        {%if value.id == event.id%}
            {% set cle = key%}
            {% set cleprev=key %}
        {% endif %}
    {% endfor %}
    {% dump(cle) %}
    {% if cle==events|length -1  %}
        {% set cle=-1 %}
    {% endif %}
    {% dump(cle) %}
    {% set next=events[cle+1].id  %}
    {% dump(next) %}
    {% if cleprev<=0 %}
        {% set cleprev= (events|length)  %}
    {% endif %}
    {% dump(cle) %}
    {% set previous=events[cleprev-1].id  %}

    <p>Pour en apprendre plus sur d'autres évènements</p>
    <div class="btn-group" role="group" aria-label="Basic mixed styles" >
        <a  class="btn btn-warning" href="{{ path('app_event_show', {id:previous}) }}">Précédent</a>
        <a class="btn btn-primary" href="{{ path('app_event_show', {id:next}) }}">Suivant</a>
    </div>
{% endblock %}
