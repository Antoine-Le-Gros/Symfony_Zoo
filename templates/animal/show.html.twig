{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ animal.nomAnimal }}</h1>
    {% if (animal.image is not null) %}
        <div class="text-center mt-3">
            <img class="text-center w-50" src="{{ animal.image.image }}" alt="Image animal">
        </div>
    {% else %}
        <div class="text-center mt-3">
            <img class="text-center w-50" src="{{ asset('img/default.png') }}" alt="Image PlaceHolder">
        </div>
    {% endif %}
    <dl>
        <dt>Nom :</dt>
        <dd>{{ animal.nomAnimal }}</dd>

        <dt>Description :</dt>
        <dd>{{ animal.descriptionAnimal }}</dd>

        <dt>Esp√®ce :</dt>
        <dd><span class="badge bg-secondary">
                <a class="nav-link"
                   href="{{ path("app_animals", {idEspece: animal.espece.id}) }}">{{ animal.espece.libEspece }}</a>
            </span>
        </dd>

        <dt>Enclos :</dt>
        <dd><span class="badge bg-secondary">{{ animal.enclos.nomEnclos }}</span></dd>

        {% if animal.parent1 is not null %}
            <dt>Parent(s) :
                <ul>
                    <li><span class="badge bg-secondary">
                            <a class="nav-link"
                               href="{{ path("app_animal_show", {id: animal.parent1.id}) }}">{{ animal.parent1.nomAnimal }}</a>
                        </span>
                    </li>
                    {% if animal.parent2 is not null %}
                        <li><span class="badge bg-secondary">
                            <a class="nav-link"
                               href="{{ path("app_animal_show", {id: animal.parent2.id}) }}">{{ animal.parent2.nomAnimal }}</a>
                        </span>
                        </li>
                    {% endif %}
                </ul>
            </dt>
        {% endif %}
    </dl>
{% endblock %}

{% block title %}
    {{ animal.nomAnimal }}
{% endblock %}